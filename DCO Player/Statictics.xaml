<Page x:Class="DCO_Player.Statictics"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DCO_Player"
      mc:Ignorable="d" 
      d:DesignHeight="688" d:DesignWidth="1320"
      Title="Statictics">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="17*"/>
            <ColumnDefinition Width="93*"/>
        </Grid.ColumnDefinitions>
        <Button Style="{StaticResource UndoButton}" VerticalAlignment="Top" HorizontalAlignment="Left" Width="30" Height="30" x:Name="undo" ScrollViewer.CanContentScroll="False" BorderBrush="{x:Null}" Foreground="{x:Null}" Background="{x:Null}" BorderThickness="0" RenderTransformOrigin="0.5,0.48" Margin="19,19,0,0" Click="Undo_Click">
            <Button.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="180"/>
                    <TranslateTransform Y="1.24"/>
                </TransformGroup>
            </Button.RenderTransform>
        </Button>
        <Label Margin="64,13,0,0" Foreground="#AFAFAF" FontFamily="Calibri" FontSize="25" FontWeight="Bold" Grid.ColumnSpan="2">Statistics</Label>
        <TextBlock x:Name="UpdateText" Margin="0,13,50,0" Foreground="#AFAFAF" FontFamily="Calibri" FontSize="25" FontWeight="Bold" HorizontalAlignment="Right" Grid.ColumnSpan="2" MouseDown="Update_MouseDown">Update</TextBlock>
        <Grid VerticalAlignment="Top" Margin="64, 100, 0, 0" Grid.ColumnSpan="2">
            <Ellipse HorizontalAlignment="Left" Width="200" Height="200" >
                <Ellipse.Fill>
                    <ImageBrush x:Name="AccountImage"/>
                </Ellipse.Fill>
            </Ellipse>
            <TextBox x:Name="AccountName" Margin="264,-60,0,0" IsReadOnly="True" VerticalAlignment="Center" TextWrapping="Wrap" Foreground="#AFAFAF" FontFamily="Calibri" FontSize="56" Background="{x:Null}" BorderBrush="{x:Null}" SelectionBrush="{x:Null}" FontWeight="Bold"/>
            <TextBox x:Name="AccountLogin" Margin="264,50,0,0" IsReadOnly="True" VerticalAlignment="Center" TextWrapping="Wrap" Foreground="#AFAFAF" FontFamily="Calibri" FontSize="40" Background="{x:Null}" BorderBrush="{x:Null}" SelectionBrush="{x:Null}" FontWeight="Bold"/>
            <Label x:Name="CreateDate" Margin="0,0,64,0" Foreground="#AFAFAF" FontFamily="Calibri" FontSize="30" Width="100" HorizontalAlignment="Right"/>
        </Grid>
        <StackPanel Orientation="Horizontal" Margin="80,374,0,239" Grid.ColumnSpan="2">
            <Label x:Name="Albums" Margin="10,0,30,0" Foreground="#777777" FontFamily="Calibri" FontSize="31" Width="200" HorizontalContentAlignment="Center" FontWeight="Bold" Background="{x:Null}" >Albums</Label>
            <Label x:Name="Artists" Margin="0,0,30,0" Foreground="#777777" FontFamily="Calibri" FontSize="31" Width="200" HorizontalContentAlignment="Center" FontWeight="Bold" >Artists</Label>
            <Label x:Name="Playlists" Margin="0,0,30,0" Foreground="#777777" FontFamily="Calibri" FontSize="31" Width="200" HorizontalContentAlignment="Center" FontWeight="Bold" >Playlists</Label>
            <Label x:Name="Songs" Margin="0,0,30,0" Foreground="#777777" FontFamily="Calibri" FontSize="31" Width="200" HorizontalContentAlignment="Center" FontWeight="Bold" >Songs</Label>
            <Label x:Name="NumberOfHoursPlaylists" Margin="0,0,30,0" Foreground="#777777" FontFamily="Calibri" FontSize="31" Width="200" HorizontalContentAlignment="Center" FontWeight="Bold" >Playlists Hours</Label>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Margin="80,481,0,0" Grid.ColumnSpan="2">
            <Label x:Name="AlbumsContent" Margin="10,0,30,0" Foreground="#AFAFAF" FontFamily="Calibri" FontSize="60" FontWeight="Bold" Width="200" HorizontalContentAlignment="Center">0</Label>
            <Label x:Name="FavoriteArtistsContent" Margin="0,0,30,0" Foreground="#AFAFAF" FontFamily="Calibri" FontSize="60" FontWeight="Bold" Width="200" HorizontalContentAlignment="Center" Content="0"/>
            <Label x:Name="PlaylistsContent" Margin="0,0,30,0" Foreground="#AFAFAF" FontFamily="Calibri" FontSize="60" FontWeight="Bold" Width="200" HorizontalContentAlignment="Center">0</Label>
            <Label x:Name="SongsContent" Margin="0,0,30,0" Foreground="#AFAFAF" FontFamily="Calibri" FontSize="60" FontWeight="Bold" Width="200" HorizontalContentAlignment="Center">0</Label>
            <Label x:Name="NumberOfHourPlaylistssContent" Margin="0,0,30,0" Foreground="#AFAFAF" FontFamily="Calibri" FontSize="60" FontWeight="Bold" HorizontalContentAlignment="Center" Width="200">0</Label>
        </StackPanel>
    </Grid>
</Page>
